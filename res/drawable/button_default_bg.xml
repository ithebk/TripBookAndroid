<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="false" >
        <shape>
            <solid
                android:color="#fff" />
            <stroke
                android:width="1dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
    
     <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#E5E4E2" />
            <stroke
                android:width="5dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
    
    
    <item>
        <shape>
            <gradient
                android:startColor="#f8f9fa"
                android:endColor="#d2d2d2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>