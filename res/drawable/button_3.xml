<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   
    <item  android:state_pressed="false" >
        
        <shape>
            <solid
                android:color="#4CAF50"/>
            <stroke
                android:width="4dp"
                android:color="#66BB6A" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    
     <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#78909C" />
            <stroke
                android:width="0dp"
                android:color="#00A86B" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    
    
    <item>
        
        <shape>
            <gradient
                android:startColor="#f8f9fa"
                android:endColor="#d2d2d2"
                android:angle="270" 
                />
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>